.header
  .header--left
    %p.header--left__name
      = current_user.name
    %span.header--left__icon
      = link_to new_group_path do
        .fa.fa-pencil-square-o{"aria-hidden" => "true"}
      = link_to edit_user_registration_path do
        .fa.fa-cog{"aria-hidden" => "true"}
  .header--right
    .header--right__left
      %p.group
        =@group.group_name
      %p.member
        members:
        -@group.users.each do |user|
          =user.name
    .header--right__right
      = link_to edit_group_path @group do
        %span.edit Edit
.contents
  .contents__left
    .contents__left__box
      =render "groups/box"
  .contents__right
    .contents__right__top
      %ul.message
        =render partial: "case"
    .contents__right__bottom
      .contents__right__bottom__box
        .fa.fa-picture-o{"aria-hidden" => "true"}
        = form_for [@group, @message], url: {action: :create},  html: { id: "new_message" }, remote: true do |f|
          = f.text_field :body, placeholder: "type a message", class: "contents__right__bottom__box__left"
          = f.submit "SEND", class: "contents__right__bottom__box__right"